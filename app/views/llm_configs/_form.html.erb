<div class="container">
  <%= form_with(model: @llm_config, local: true, class: "form") do |f| %>
    <div class="field">
      <%= f.label :name, class: "label" %>
      <div class="control">
        <%= f.text_field :name, class: "input", placeholder: "e.g., GPT-4 Production Config" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :provider, class: "label" %>
      <div class="control">
        <div class="select">
          <%= f.select :provider, [["OpenAI", "openai"]], {}, class: "select" %>
        </div>
      </div>
    </div>

    <div class="field">
      <%= f.label :version, class: "label" %>
      <div class="control">
        <%= f.text_field :version, class: "input", placeholder: "e.g., gpt-4-turbo-preview" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :default_parameters, class: "label" %>
      <div class="control">
        <%= f.text_area :default_parameters, class: "textarea", 
            placeholder: "Enter JSON parameters, e.g.:
{
  \"temperature\": 0.7,
  \"max_tokens\": 500
}" %>
      </div>
      <p class="help">Enter JSON format configuration parameters</p>
    </div>

    <div class="field">
      <div class="control">
        <%= f.submit class: "button is-primary" %>
      </div>
    </div>
  <% end %>
</div>